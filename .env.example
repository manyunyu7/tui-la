# ===========================================
# Love Map - Environment Configuration
# ===========================================

# App
NODE_ENV=development
APP_NAME=Twy
APP_URL=http://localhost:5173
API_URL=http://localhost:3000

# Server
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgres://lovemap:lovemap_dev@localhost:5432/lovemap
POSTGRES_USER=lovemap
POSTGRES_PASSWORD=lovemap_dev
POSTGRES_DB=lovemap

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Optional: Email (for future features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# SMTP_FROM=Love Map <noreply@yourdomain.com>
